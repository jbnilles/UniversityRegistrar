@{
  Layout = "_Layout";
}
@using UniversityRegistrar.Models;
<div class="container">
  <div class="jumbotron">
    <h1>List of Courses</h1>
  </div>
  @if(Model.Count == 0)
  {
    <p>There are no Courses added.</p>
  }
  <ul>
    @foreach(Course course in Model)
    {
      <li>@course.CourseName @course.CourseNumber | <a href="/courses/details/@course.CourseId">details</a></li>
    }
  </ul>
  <p>@Html.ActionLink("Add a Course","Create")</p>
  <p>@Html.ActionLink("Home","Index","Home")</p>

</div>
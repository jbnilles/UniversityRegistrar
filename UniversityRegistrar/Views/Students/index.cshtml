@{
  Layout = "_Layout";
}
@using UniversityRegistrar.Models;
<div class="container">
  <div class="jumbotron">
    <h1>List of students</h1>
  </div>
  @if(Model.Count == 0)
  {
    <p>There are no students enrolled.</p>
  }
  <ul>
    @foreach(Student student in Model)
    {
      <li>@student.Name | <a href="/students/details/@student.StudentId">details</a></li>
    }
  </ul>
  <p>@Html.ActionLink("Add a student","Create")</p>
  <p>@Html.ActionLink("Home","Index","Home")</p>


</div>
@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.DateOfEnrollment)
  @Html.EditorFor(model => model.DateOfEnrollment)

  @Html.Label("Select Department")
  @Html.DropDownList("DepartmentId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of students", "Index")</p>